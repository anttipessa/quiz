{{!-- Jotain testailua vaan --}}

<div id="game" class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card">
        <div class="card-header">
          <h3 id="title" class="text-center mb-3">{{game.title}}</h3>
        </div>
        <div class="card-body">
          {{>messages}}
          <h4 class="instructions text-left mb-2">Instructions</h4>
          <p>
            Read the questions carefully and choose the right answers (one or more
            can be correct).
          </p>
          <hr>
          <form method="POST">
            <div class="form-group">
              {{>questions}}
            </div>
            <!-- POST-metodia ei vielÃ¤ toteutettu, joten button ei toimi -->
            <button id="grade" type="submit" class="btn btn-primary">Grade</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>