<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h3 class="text-center mb-3"><i class="fas fa-tasks"></i> Create Exercise</h3>
                {{>messages}}
                <form method="POST" action="/questionnaires/new">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" name="title" class="form-control" id="title" {{#if title}}value="{{title}}"
                            {{/if}} placeholder="Title of the questionnaire" required>
                    </div>
                    <div class="form-group">
                        <label for="submissions">Maximum submissions</label>
                        <select class="form-control" id="submissions">
                            <option value="1" selected="selected">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="questions">Questions</label>
                        <hr>
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" {{#if title}}value="{{title}}" {{/if}}
                                placeholder="Insert question title here.." required>
                        </div>
                        <div class="form-group">
                            <label for="maxPoints">Max points</label>
                            <input type="number" name="maxPoints" class="form-control"
                                {{#if maxPoints}}value="{{maxPoints}}" {{/if}}
                                placeholder="Maximum points from the question" required>
                        </div>
                        <div class="form-group">
                            <label for="options">Options</label>
                            <hr>
                            <div class="form-group">
                                <label for="option">Option</label>
                                <input type="text" name="option" class="form-control" {{#if option}}value="{{option}}"
                                    {{/if}} placeholder="Insert option here.." required>
                            </div>
                            <div class="form-group">
                                <label for="correctness">Correctness</label>
                                <select class="form-control" id="submissions" required>
                                    <option value="true">True</option>
                                    <option value="false">False</option>
                                </select>
                            </div>
                            <button type="button" id="addOption" class="btn btn-primary">Add Option</button>
                        </div>
                        <button type="button" id="addQuestion" class="btn btn-primary">Add Question</button>
                    </div>
                    <hr>
                    <button type="submit" id="btnCreate" class="btn btn-primary">Create</button>
                </form>
                <p class="lead mt-4"><a href="/questionnaires">Cancel</a></p>
            </div>
        </div>
    </div>
</div>